{
  "name": "brodbutik-api",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "main": "index.js",
  "license": "MIT",
  "prisma": {
    "schema": "prisma/schema.prod.prisma"
  },
  "dependencies": {
    "@azure/functions": "^4.4.0",
    "@prisma/client": "^5.17.0"
  },
  "devDependencies": {
    "prisma": "^5.17.0"
  },
  "scripts": {
    "dev": "func start --javascript",
    "postinstall": "node -e \"const fs=require('fs');fs.mkdirSync('prisma',{recursive:true});if(fs.existsSync('prisma/schema.prod.prisma'))fs.copyFileSync('prisma/schema.prod.prisma','prisma/schema.prisma');process.exit(0)\" && prisma generate --schema prisma/schema.prisma",
    "prisma:generate": "prisma generate --schema prisma/schema.prod.prisma",
    "prisma:migrate": "prisma migrate dev --schema prisma/schema.prod.prisma",
    "prisma:deploy": "prisma migrate deploy --schema prisma/schema.prod.prisma"
  }
}